                        <div class="container" id="top">
                            <main class="content">
                                <section class="main">
                                    <!-- Stats Boxes -->
                                    <div class="box stats-box fade-in" style="animation-delay: 0.1s;">
                                        <div class="stats-details">
                                            <h4 class="stats-value">
                                                <%=totalBooking%> <span class="trend-indicator trend-up"><i
                                                            class="fas fa-arrow-up"></i> 12.5%</span>
                                            </h4>
                                            <span class="stats-label">Total Booking</span>
                                        </div>

                                    </div>

                                    <div class="box stats-box secondary fade-in" style="animation-delay: 0.2s;">
                                        <div class="stats-details">
                                            <h4 class="stats-value">
                                                <%=totalApprovedBooking%> <span class="trend-indicator trend-up"><i
                                                            class="fas fa-arrow-up"></i> 5.2%</span>
                                            </h4>
                                            <span class="stats-label"> Approved Booking</span>
                                        </div>

                                    </div>

                                    <div class="box stats-box warning fade-in" style="animation-delay: 0.3s;">
                                        <div class="stats-details">
                                            <h4 class="stats-value">
                                                <%=totalPendingBooking%> <span class="trend-indicator trend-down"><i
                                                            class="fas fa-arrow-down"></i> 3.8%</span>
                                            </h4>
                                            <span class="stats-label">Pending Booking</span>
                                        </div>

                                    </div>

                                    <div class="box stats-box danger fade-in" style="animation-delay: 0.4s;">
                                        <div class="stats-details">
                                            <h4 class="stats-value"><%=totalRejectedBookng%> <span
                                                    class="trend-indicator trend-neutral">0%</span></h4>
                                            <span class="stats-label">Rejected</span>
                                        </div>

                                    </div>

                                    <div class="data-table-section fade-in" style="animation-delay: 0.6s;">
                                        <div class="section-header">
                                            <h3 class="section-title">Booking Request Management</h3>
                                            <div class="section-actions">
                                                <a href="#" class="box-action-btn" title="Add New"
                                                    style='text-decoration : none'>
                                                    <i class="fas fa-plus"></i>
                                                </a>

                                                <a href="#" class="box-action-btn" title="Export in excel"
                                                    style='text-decoration : none'>
                                                    <i class="fas fa-file-excel"></i>
                                                </a>

                                                <a href="#" class="box-action-btn" title="PDF"
                                                    style='text-decoration : none'>
                                                    <i class="fas fa-file-pdf"></i>
                                                </a>
                                            </div>
                                        </div>

                                        <div class="filter-controls">
                                            <div class="filter-group">
                                                <label class="filter-label">Service Type</label>
                                                <select class="filter-select" id="service_type">
                                                    <option value="">All Types</option>

                                                    <% allService.forEach((s)=>{ %>
                                                        <option value="<%=s.serviceName%>">
                                                            <%=s.serviceName%>
                                                        </option>

                                                        <% })%>


                                                </select>
                                            </div>
                                            <div class="filter-group">
                                                <label class="filter-label">Status</label>
                                                <select class="filter-select" id="status">
                                                    <option value="">All Status</option>
                                                    <option value="Active">Approveed</option>
                                                    <option value="Pending">Pending</option>
                                                    <option value="Rejected">Rejected</option>
                                                </select>
                                            </div>

                                            <div class="filter-actions">
                                                <button class="filter-btn apply" id="apply">
                                                    <i class="fas fa-filter"></i> Apply
                                                </button>

                                            </div>
                                        </div>

                                        <div class="table-responsive">
                                            <table id="bookingTable" class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Sl</th>
                                                        <th>Name</th>
                                                        <th>Mobile</th>
                                                        <th>Email </th>
                                                        <th>Address</th>
                                                        <th>Service </th>
                                                        <th> Date</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    <% allBokingRequest.forEach((b, index )=>{ %>

                                                        <tr data-service-type="<%=b.service%>"
                                                            data-status="<%=b.status%>">

                                                            <td>
                                                                <%=index+1%>
                                                            </td>
                                                            <td>
                                                                <%=b.name%>
                                                            </td>
                                                            <td>
                                                                <%=b.mobile%>
                                                            </td>

                                                            <td>
                                                                <%=b.email%>
                                                            </td>

                                                            <td>
                                                                <%=b.address%>
                                                            </td>
                                                            <td>
                                                                <%=b.service%>
                                                            </td>
                                                            <td>
                                                                <%=b.preferred_date%>
                                                            </td>

                                                            <td
                                                                style="color: <%=b.status==='Pending' ? '#FF9800' : (b.status === 'Rejected' ? 'red' : 'green') %>">
                                                                <%=b.status%>
                                                            </td>

                                                            <td>
                                                                <div class="dropdown text-end">
                                                                    <button class="btn btn-light" type="button"
                                                                        data-bs-toggle="dropdown" aria-expanded="false">
                                                                        &#x22EE;
                                                                    </button>
                                                                    <ul class="dropdown-menu">

                                                                        <% if(b.status==='Pending' ||
                                                                            b.status==='Approved' ){ %>

                                                                            <li><a href="#"
                                                                                    class="dropdown-item text-danger"
                                                                                    onclick="rejectBooking('<%=b._id%>')">Reject</a>
                                                                            </li>

                                                                            <%} %>


                                                                                <li><a href="/approve-booking/<%=b._id%>"
                                                                                        class="dropdown-item text-success">Approve</a>
                                                                                </li>


                                                                                <li><a href="#"
                                                                                        onclick="deleteBooking('<%=b._id%>')"
                                                                                        class="dropdown-item text-danger">Delete</a>
                                                                                </li>

                                                                    </ul>
                                                                </div>
                                                            </td>



                                                        </tr>

                                                        <%}) %>



                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </section>
                            </main>
                        </div>

                        <button class="scroll-top">
                            <i class="fas fa-arrow-up"></i>
                        </button>


</body>


<script>

    $('#apply').on('click', () => {

        let selectedService = $('#service_type ').val();
        let selectedStatus = $('#status').val();

        $('#bookingTable tbody tr').each(function () {

            $(this).toggle(
                (selectedService === "" || $(this).attr('data-service-type') === selectedService) &&
                (selectedStatus === "" || $(this).attr('data-status') === selectedStatus)
            );


        })

    })

    $(document).ready(function () {
        $('#bookingTable').DataTable({
            responsive: true,
            paging: true,
            searching: true,
            info: true,
            autoWidth: false,
            lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            dom: '<"top"lf>rt<"bottom"ip>',
            language: {
                search: "_INPUT_",
                searchPlaceholder: "Search programs...",
                lengthMenu: "Show _MENU_ entries",
                info: "Showing _START_ to _END_ of _TOTAL_ entries",
                infoEmpty: "Showing 0 to 0 of 0 entries",
                infoFiltered: "(filtered from _MAX_ total entries)",
                paginate: {
                    first: "First",
                    last: "Last",
                    next: "Next",
                    previous: "Previous"
                }
            }
        });

        $(window).scroll(function () {
            if ($(this).scrollTop() > 300) {
                $('.scroll-top').addClass('active');
            } else {
                $('.scroll-top').removeClass('active');
            }
        });

        $('.scroll-top').click(function () {
            $('html, body').animate({ scrollTop: 0 }, 300);
            return false;
        });

        $('[data-toggle="tooltip"]').tooltip();


    });


    const rejectBooking = (id) => {

        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, reject this!"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = `/reject-booking/${id}`

            }
        });

    }

    const deleteBooking = (id) => {


        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete this!"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = `/delete-booking/${id}`
            }
        });

    }


</script>



</html>