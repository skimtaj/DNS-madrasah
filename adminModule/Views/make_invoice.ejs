<!DOCTYPE html>
<html lang="en">
<%- include('admin_sidebar')%>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>AC Technician POS</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <style>
            * {
                box-sizing: border-box;
                margin: 0;
                padding: 0;
            }

            body {
                font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
                background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
                margin: 0;
                padding: 0;
                color: #333;
                font-size: 16px;
                min-height: 100vh;
            }

            .main-content {
                width: 100%;
                min-height: 100vh;
                padding-top: 70px;
                padding-left: 260px;
            }

            .content-wrapper {
                padding: 20px;
            }

            .pos-container {
                width: 100%;
                max-width: 1200px;
                background: #fff;
                border-radius: 12px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
                overflow: hidden;
                margin: 0 auto;
            }

            .pos-header {
                background: #2c3e50;
                color: white;
                padding: 20px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .pos-title {
                font-size: 24px;
                font-weight: bold;
            }

            .pos-body {
                display: flex;
                min-height: 500px;
            }

            .customer-section {
                flex: 1;
                padding: 20px;
                background: #f9f9f9;
                border-right: 1px solid #eee;
                min-width: 250px;
            }

            .section-title {
                font-size: 18px;
                color: #2c3e50;
                margin-bottom: 15px;
                padding-bottom: 8px;
                border-bottom: 1px solid #ddd;
                display: flex;
                align-items: center;
            }

            .section-title i {
                margin-right: 10px;
                color: #3498db;
                font-size: 16px;
            }

            .form-group {
                margin-bottom: 15px;
            }

            label {
                font-weight: bold;
                color: #333;
                display: block;
                margin-bottom: 5px;
                font-size: 14px;
            }

            input,
            select {
                width: 100%;
                padding: 12px;
                border: 1px solid #ddd;
                border-radius: 6px;
                font-size: 14px;
                transition: all 0.3s;
            }

            input:focus,
            select:focus {
                border-color: #3498db;
                outline: none;
                box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
            }

            .items-section {
                flex: 2;
                padding: 20px;
                display: flex;
                flex-direction: column;
                min-width: 0;
            }

            .items-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 15px;
                flex-wrap: wrap;
                gap: 10px;
            }

            .action-btn {
                padding: 10px 16px;
                background: #3498db;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-size: 14px;
                transition: all 0.3s;
                display: inline-flex;
                align-items: center;
                justify-content: center;
            }

            .action-btn i {
                margin-right: 5px;
            }

            .action-btn:hover {
                background: #2980b9;
                transform: translateY(-2px);
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            }

            .delete-btn {
                background: #e74c3c;
                padding: 8px 12px;
            }

            .delete-btn:hover {
                background: #c0392b;
            }

            .table-container {
                overflow-x: auto;
                flex-grow: 1;
                border-radius: 8px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
                -webkit-overflow-scrolling: touch;
            }

            table {
                width: 100%;
                border-collapse: collapse;
                background: #fafafa;
                min-width: 600px;
            }

            table th {
                background: #2c3e50;
                color: #fff;
                padding: 14px;
                text-align: center;
                font-size: 14px;
                font-weight: 600;
                position: sticky;
                top: 0;
            }

            table td {
                padding: 12px;
                text-align: center;
                border-bottom: 1px solid #eaeaea;
            }

            table tr:nth-child(even) {
                background: #f2f2f2;
            }

            .item-input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 4px;
                text-align: center;
                background: transparent;
                font-size: 14px;
            }

            .service-select,
            .tool-input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 4px;
                background: transparent;
                font-size: 14px;
            }

            .tool-input {
                display: none;
            }

            .summary-section {
                padding: 20px;
                background: #f9f9f9;
                border-top: 1px solid #eee;
            }

            .summary-form {
                width: 100%;
            }

            .summary-form-group {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 12px;
            }

            .summary-label {
                font-weight: bold;
                color: #333;
                font-size: 14px;
                width: 40%;
            }

            .summary-input {
                width: 55%;
                text-align: right;
                font-weight: bold;
                background-color: #f8f9fa;
            }

            .grand-total-input {
                background-color: #eaf7ff;
                font-size: 18px;
                color: #2c3e50;
                font-weight: bold;
            }

            .pos-actions {
                display: flex;
                gap: 15px;
                margin-top: 20px;
            }

            .btn {
                flex: 1;
                padding: 16px;
                color: #fff;
                border: none;
                font-size: 16px;
                font-weight: bold;
                border-radius: 6px;
                cursor: pointer;
                transition: all 0.3s ease;
                box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 8px;
            }

            .btn-primary {
                background: linear-gradient(to right, #00a65a, #00c271);
            }

            .btn-primary:hover {
                background: linear-gradient(to right, #008f4a, #00a65a);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
                transform: translateY(-2px);
            }

            .gst-section {
                display: flex;
                align-items: center;
                gap: 10px;
                margin-bottom: 15px;
                flex-wrap: wrap;
            }

            .gst-label {
                font-weight: bold;
                color: #333;
                font-size: 14px;
                white-space: nowrap;
            }

            .gst-select {
                width: auto;
                min-width: 90px;
                padding: 8px 12px;
                font-size: 13px;
            }

            @media (max-width: 1200px) {
                .main-content {
                    padding-left: 0;
                }
            }

            @media (max-width: 992px) {
                .pos-body {
                    flex-direction: column;
                }

                .customer-section {
                    border-right: none;
                    border-bottom: 1px solid #eee;
                }
            }

            @media (max-width: 768px) {
                .main-content {
                    padding-top: 60px;
                }

                .content-wrapper {
                    padding: 15px;
                }

                .pos-header {
                    flex-direction: column;
                    gap: 15px;
                    text-align: center;
                    padding: 15px;
                }

                .pos-title {
                    font-size: 20px;
                }

                .section-title {
                    font-size: 16px;
                }

                .items-header {
                    flex-direction: column;
                    align-items: flex-start;
                }

                .action-btn {
                    width: 100%;
                    margin-top: 10px;
                }

                table th,
                table td {
                    padding: 10px 5px;
                }

                .item-input,
                .service-select,
                .tool-input {
                    padding: 8px;
                    font-size: 13px;
                }

                .btn {
                    padding: 14px;
                    font-size: 15px;
                }

                .gst-section {
                    flex-direction: column;
                    align-items: flex-start;
                }

                .gst-select {
                    width: 100%;
                }

                .summary-form-group {
                    flex-direction: column;
                    align-items: flex-start;
                }

                .summary-label {
                    width: 100%;
                    margin-bottom: 5px;
                }

                .summary-input {
                    width: 100%;
                }
            }

            @media (max-width: 576px) {
                .main-content {
                    padding-top: 50px;
                }

                .content-wrapper {
                    padding: 10px;
                }

                .pos-header {
                    padding: 10px;
                }

                .pos-title {
                    font-size: 18px;
                }

                .customer-section,
                .items-section {
                    padding: 15px;
                }

                .section-title {
                    font-size: 15px;
                }

                input,
                select {
                    padding: 10px;
                    font-size: 13px;
                }

                table th,
                table td {
                    padding: 8px 3px;
                    font-size: 12px;
                }

                .item-input,
                .service-select,
                .tool-input {
                    padding: 6px;
                    font-size: 12px;
                }

                .action-btn {
                    padding: 8px 12px;
                    font-size: 12px;
                }

                .btn {
                    padding: 12px;
                    font-size: 14px;
                }

                .summary-section {
                    padding: 15px;
                }

                .gst-select {
                    min-width: 80px;
                    padding: 6px 8px;
                }

                .pos-actions {
                    flex-direction: column;
                }
            }

            @media (max-width: 400px) {
                .pos-title {
                    font-size: 16px;
                }

                .section-title {
                    font-size: 14px;
                }

                label {
                    font-size: 13px;
                }

                input,
                select {
                    font-size: 12px;
                    padding: 8px;
                }

                .gst-label {
                    font-size: 13px;
                }

                .grand-total-input {
                    font-size: 16px;
                }
            }
        </style>
    </head>

    <body>
        <div class="main-content">
            <div class="content-wrapper">
                <div class="pos-container">
                    <div class="pos-header">
                        <div class="pos-title">
                            <i class="fas fa-air-conditioner"></i> AC Technician POS
                        </div>
                    </div>

                    <form id="invoiceForm" method="post">
                        <div class="pos-body">
                            <div class="customer-section">
                                <div class="section-title">
                                    <i class="fas fa-user"></i> Customer Information
                                </div>

                                <div class="form-group">
                                    <label>Customer Name</label>
                                    <input type="text" id="customerName" placeholder="Enter customer name" required
                                        name="customerName">
                                </div>
                                <div class="form-group">
                                    <label>Phone Number</label>
                                    <input type="text" id="customerPhone" placeholder="Enter phone number"
                                        name="customerPhone">
                                </div>
                                <div class="form-group">
                                    <label>Customer Address</label>
                                    <input type="text" id="customerAddress" placeholder="Enter address"
                                        name="customerAddress">
                                </div>
                                <div class="form-group">
                                    <label>Invoice Date</label>
                                    <input type="date" id="date" name="invoiceDate">
                                </div>
                            </div>

                            <div class="items-section">
                                <div class="items-header">
                                    <div class="section-title">
                                        <i class="fas fa-tools"></i> Services & Items
                                    </div>
                                    <button type="button" class="action-btn" id="addRowBtn">
                                        <i class="fas fa-plus"></i> Add Item
                                    </button>
                                </div>

                                <div class="table-container">
                                    <table id="itemsTable">
                                        <thead>
                                            <tr>
                                                <th width="20%">Type</th>
                                                <th width="25%">Description</th>
                                                <th width="13%">Qty</th>
                                                <th width="20%">Rate (₹)</th>
                                                <th width="20%">Amount (₹)</th>
                                                <th width="5%">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>



                                        </tbody>
                                    </table>
                                </div>

                                <div class="summary-section">
                                    <div class="gst-section">
                                        <span class="gst-label">GST Rate:</span>
                                        <select id="gstRate" class="gst-select" name="gstRate">
                                            <option value="0">No GST (0%)</option>
                                            <option value="5" selected>GST 5%</option>
                                            <option value="12">GST 12%</option>
                                            <option value="18">GST 18%</option>
                                            <option value="28">GST 28%</option>
                                        </select>
                                    </div>

                                    <div class="summary-form">
                                        <div class="summary-form-group">
                                            <label class="summary-label">Subtotal:</label>
                                            <input type="text" class="summary-input" id="subtotal" name="subtotal"
                                                value="0.00" readonly>
                                        </div>

                                        <div class="summary-form-group">
                                            <label class="summary-label">Discount:</label>
                                            <input type="number" class="summary-input" id="discount" name="discount"
                                                value="0" min="0" step="0.01">
                                        </div>

                                        <div class="summary-form-group">
                                            <label class="summary-label">Tax (<span id="taxPercent">5</span>%):</label>
                                            <input type="text" class="summary-input" id="taxAmount" name="taxAmount"
                                                value="0.00" readonly>
                                        </div>

                                        <div class="summary-form-group total-row">
                                            <label class="summary-label">Grand Total:</label>
                                            <input type="text" class="summary-input grand-total-input" id="grandTotal"
                                                name="grandTotal" value="0.00" readonly>
                                        </div>
                                    </div>

                                    <div class="pos-actions">
                                        <button type="submit" class="btn btn-primary" id="checkoutBtn">
                                            <i class="fas fa-check-circle"></i> Save & Print
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
            let indexNo = 0;

                    const allServices = <%- JSON.stringify(allServices) %>


                document.addEventListener('DOMContentLoaded', function () {
                    document.getElementById('date').valueAsDate = new Date();

                    createNewRow();

                    function toggleDescriptionField(selectElement) {
                        const row = selectElement.closest('tr');
                        const type = selectElement.value;
                        const serviceSelect = row.querySelector('.service-select');
                        const toolInput = row.querySelector('.tool-input');

                        if (type === 'service') {
                            serviceSelect.style.display = 'block';
                            serviceSelect.disabled = false; 
                            toolInput.style.display = 'none';
                            toolInput.disabled = true;      
                            toolInput.value = '';
                        } else {
                            serviceSelect.style.display = 'none';
                            serviceSelect.disabled = true;  
                            serviceSelect.value = '';
                            toolInput.style.display = 'block';
                            toolInput.disabled = false;     
                        }
                    }

                    function createNewRow() {
                 
                        const tbody = document.querySelector('#itemsTable tbody');
                        const newRow = document.createElement('tr');
                        newRow.innerHTML = `
                        <td>
                            <select class="item-input type-select" name="service[${indexNo}][serviceType]">
                                <option value="service">Service</option>
                                <option value="tool">Tool/Part</option>
                            </select>
                        </td>
                        <td>
                            <select class="service-select desc-select" name="service[${indexNo}][serviceName]">
                                <option value="">Select Service</option>

                                <% allServices.forEach((s)=>{ %>
                                <option value="<%=s.serviceName%>"><%=s.serviceName%></option>

                                <%}) %>
                                
                            </select>
                            <input type="text" class="tool-input desc-input" placeholder="Tool/Part Name" name='service[${indexNo}][item]'>
                        </td>
                        <td><input type="number" class="item-input qty" name="service[${indexNo}][qty]" placeholder="1" min="1" value="1"></td>
                        <td><input type="number" class="item-input rate" name="service[${indexNo}][rate]" placeholder="0.00" min="0" step="0.01"></td>
                        <td><input type="number" class="item-input amount" name="service[${indexNo}][itemAmount]" placeholder="0.00" readonly></td>
                        <td><button type="button" class="action-btn delete-btn"><i class="fas fa-trash"></i></button></td>
                    `;
                        tbody.appendChild(newRow);


                        $(newRow).find('.desc-select').on('change', function (e) {
                            let selectedService = e.target.value

                            if (selectedService) {
                                allServices.forEach((s) => {
                                    if (s.serviceName.trim() === selectedService.trim()) {
                                        $(newRow).find('.rate').val(s.serviceCharge).trigger('input') 
                                    }
                                });
                            }
                        });


                        const typeSelect = newRow.querySelector('.type-select');
                        toggleDescriptionField(typeSelect);



                        addRowEventListeners(newRow);

                        typeSelect.addEventListener('change', function () {
                            toggleDescriptionField(this);
                        });

                        newRow.querySelector('.delete-btn').addEventListener('click', function () {
                            if (document.querySelectorAll('#itemsTable tbody tr').length > 1) {
                                newRow.remove();
                                calculateTotals();
                            } else {
                                alert('You need at least one item in the invoice');
                            }
                        });


                        indexNo++;
                        return newRow;
                    }

                    document.getElementById('addRowBtn').addEventListener('click', function () {
                        createNewRow();
                    });

                    function addRowEventListeners(row) {
                        const qtyInput = row.querySelector('.qty');
                        const rateInput = row.querySelector('.rate');
                        const amountInput = row.querySelector('.amount');

                        qtyInput.addEventListener('change', function () {
                            if (this.value < 1) this.value = 1;
                        });

                        rateInput.addEventListener('change', function () {
                            if (this.value < 0) this.value = 0;
                        });

                        const calculateAmount = () => {
                            const qty = parseFloat(qtyInput.value) || 0;
                            const rate = parseFloat(rateInput.value) || 0;
                            amountInput.value = (qty * rate).toFixed(2);
                            calculateTotals();
                        };

                        qtyInput.addEventListener('input', calculateAmount);
                        rateInput.addEventListener('input', calculateAmount);
                    }

                    function calculateTotals() {
                        let subtotal = 0;
                        document.querySelectorAll('.amount').forEach(input => {
                            subtotal += parseFloat(input.value) || 0;
                        });

                        const discount = parseFloat(document.getElementById('discount').value) || 0;

                        const discountedSubtotal = Math.max(0, subtotal - discount);

                        const gstRateSelect = document.getElementById('gstRate');
                        const taxRate = parseFloat(gstRateSelect.value);

                        const taxAmount = discountedSubtotal * (taxRate / 100);

                        const grandTotal = discountedSubtotal + taxAmount;

                        document.getElementById('subtotal').value = subtotal.toFixed(2);
                        document.getElementById('taxPercent').textContent = taxRate;
                        document.getElementById('taxAmount').value = taxAmount.toFixed(2);
                        document.getElementById('grandTotal').value = grandTotal.toFixed(2);
                    }

                    document.getElementById('gstRate').addEventListener('change', calculateTotals);

                    document.getElementById('discount').addEventListener('input', calculateTotals);

                    document.getElementById('invoiceForm').addEventListener('submit', function (e) {
                        e.preventDefault();

                        const customerName = document.getElementById('customerName').value;
                        if (!customerName) {
                            alert('Please enter customer name');
                            return;
                        }

                        const items = document.querySelectorAll('.desc-select, .desc-input');
                        let hasItems = false;
                        items.forEach(item => {
                            if (item.value && item.value.trim() !== '' && item.style.display !== 'none') {
                                hasItems = true;
                            }
                        });

                        if (!hasItems) {
                            alert('Please add at least one item');
                            return;
                        }

                        this.submit();
                    });
                });


        </script>
    </body>

</html>