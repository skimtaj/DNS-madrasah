        </div>
    </div>

    <div class="services-section" id="services-section">
        <div class="services-header">
            <h1>Our <span class="highlight">AC Services</span></h1>
            <p>We offer a comprehensive range of air conditioning services to keep your home or business cool and
                comfortable all year round.</p>
        </div>

        <div class="pricing-container">
            <h2 class="pricing-header">Service Pricing</h2>

            <table class="pricing-table">
                <thead>
                    <tr>
                        <th>Service</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>

                    <% allServices.forEach((s)=>{ %>

                        <tr>
                            <td class="service-name">
                                <span class="service-icon"><i class="fas fa-tools"></i></span>
                                <%=s.serviceName%>
                            </td>
                            <td class="service-price">
                                <%=s.serviceCharge%>
                            </td>
                        </tr>

                        <% })%>


                </tbody>
            </table>

            <p class="service-note">*Prices may vary based on AC model, issue complexity, and unit size. Contact us for
                exact pricing.</p>

            <div style="text-align: center;">
                <button onclick="window.location.href='tel:+917797593863'" class="book-btn">
                    <i class="fas fa-phone"></i> Call for Exact Quote
                </button>
            </div>
        </div>
    </div>

    <div class="sticky-contact">
        <a href="https://wa.link/ez37j8" class="sticky-btn whatsapp">
            <i class="fab fa-whatsapp"></i>
        </a>
        <a href="tel:+7797593863" class="sticky-btn phone">
            <i class="fas fa-phone"></i>
        </a>
    </div>

