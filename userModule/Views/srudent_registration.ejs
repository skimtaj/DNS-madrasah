<% if (messages.success) { %>
                        <script>
                            Swal.fire({
                                toast: true,
                                position: "top-end",
                                icon: "success",
                                title: "<%= messages.success %>",
                                showConfirmButton: false,
                                timer: 3000,
                                timerProgressBar: true,
                                background: "#ffffff",
                                iconColor: "#00b894",
                                color: "#333",
                                customClass: {
                                    popup: 'custom-swal-toast'
                                },
                                didOpen: (toast) => {
                                    toast.style.boxShadow = '0 4px 12px rgba(0,0,0,0.1)';
                                    toast.style.borderRadius = '8px';
                                    toast.style.padding = '0.75rem 1.25rem';
                                }
                            });
                        </script>
                        <% } %>



                        <% if (messages.error) { %>
                        <script>
                            Swal.fire({
                                toast: true,
                                position: "top-end",
                                icon: "error",
                                title: "<%= messages.error %>",
                                showConfirmButton: false,
                                timer: 3000,
                                timerProgressBar: true,
                                background: "#ffffff",
                                iconColor: "#red",
                                color: "#333",
                                customClass: {
                                    popup: 'custom-swal-toast'
                                },
                                didOpen: (toast) => {
                                    toast.style.boxShadow = '0 4px 12px rgba(0,0,0,0.1)';
                                    toast.style.borderRadius = '8px';
                                    toast.style.padding = '0.75rem 1.25rem';
                                }
                            });
                        </script>
                        <% } %>




    <div class="container py-3">
        <div class="header">
            <div class="logo-container">
                <div class="logo">
                    <img src='https://dnsmadrasah.org/wp-content/uploads/2025/07/WhatsApp-Image-2025-10-22-at-9.25.10-AM-1024x1024.jpeg'
                        alt="Madrasa Logo">
                </div>
                <div class="header-text">
                    <h2>দারুন্নেদা সিদ্দিকীয়া মাদ্রাসা</h2>
                    <p class="mb-0">Student Registration Form - 2026 </p>
                </div>
            </div>
            <button class="help-btn" id="helpButton">
                <i class="fas fa-question"></i>
            </button>
        </div>

        <!-- Section Indicator -->
        <div class="section-indicator">
            <div class="step active" data-section="1">1</div>
            <div class="step" data-section="2">2</div>
            <div class="step" data-section="3">3</div>
            <div class="step" data-section="4">4</div>
        </div>

        <form id="registrationForm" method="post" action="/dnsmadrasah.org/student-registration"
            enctype="multipart/form-data" novalidate>
            <!-- Section 1: Student Information -->
            <div class="form-section active" id="section-1">
                <h5 class="mb-3 text-success">Student Info / ছাত্রের তথ্য</h5>

                <!-- Profile Image Upload -->
                <div class="profile-image-upload">
                    <div class="file-input-container">
                        <label class="form-label required-field">Upload Photo / ছবি আপলোড করুন</label>
                        <input type="file" class="form-control" id="profileImage" accept="image/*" name="student_image"
                            required>
                        <div class="invalid-feedback">Please upload a profile photo.</div>
                        <div class="form-text">File formats: JPG, PNG (Max 2MB)</div>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label required-field">Student's Name / ছাত্রের নাম </label>
                        <input type="text" class="form-control" name="student_name" required>
                        <div class="invalid-feedback">Please enter student's name.</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required-field">Class Applied For / কোন শ্রেণিতে ভর্তি
                            আবেদন</label>
                        <select class="form-select" name="applied_class" required>
                            <option value="" selected>Select Class / শ্রেণি নির্বাচন করুন</option>
                            <option value="Class IV">Class IV</option>
                            <option value="Class V">Class V</option>
                            <option value="Class VI">Class VI</option>
                            <option value="Class VII">Class VII</option>
                            <option value="Class VIII">Class VIII</option>
                            <option value="Class IX">Class IX</option>
                        </select>
                        <div class="invalid-feedback">Please select a class.</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label required-field">Date of Birth / জন্ম তারিখ</label>
                        <input type="date" class="form-control" id='dob' oninput="ageCalculate()" name="dob" required>
                        <div class="invalid-feedback">Please select date of birth.</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required-field">Age / বয়স</label>
                        <input type="number" class="form-control" min="3" id="age" name="age" required>
                        <div class="invalid-feedback">Please enter age.</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required-field">Bangla Shiksha Portal No. / বাংলা
                            শিক্ষা পোর্টাল
                            নম্বর</label>
                        <input type="text" class="form-control" name="Bangla_Shiksha_Portal" required>
                        <div class="invalid-feedback">Please enter Bangla Shiksha Portal number.</div>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label required-field">Nationality / জাতীয়তা</label>
                        <input type="text" class="form-control" value='Indian' readonly name="nationality" required>
                    </div>

                    <!-- Student Address Section -->
                    <div class="col-12 mt-3">
                        <h6 class="text-success">Student Address / ছাত্রের ঠিকানা</h6>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required-field">Village / গ্রাম</label>
                        <input type="text" class="form-control" name="Village" required>
                        <div class="invalid-feedback">Please enter village name.</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required-field">Post Office / পোস্ট অফিস</label>
                        <input type="text" class="form-control" name="post" required>
                        <div class="invalid-feedback">Please enter post office name.</div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label required-field">Police Station / থানা</label>
                        <input type="text" class="form-control" name="ps" required>
                        <div class="invalid-feedback">Please enter police station name.</div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label required-field">District / জেলা</label>
                        <input type="text" class="form-control" name="District" required>
                        <div class="invalid-feedback">Please enter district name.</div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label required-field">PIN Code / পিন কোড</label>
                        <input type="text" class="form-control" name="PIN_Code" pattern="[0-9]{6}" required>
                        <div class="invalid-feedback">Please enter a valid 6-digit PIN code.</div>
                    </div>
                </div>

                <div class="navigation-buttons">
                    <div></div> <!-- Empty div for spacing -->
                    <button type="button" class="btn btn-custom next-section" data-next="2">Next /
                        পরবর্তী</button>
                </div>
            </div>

            <!-- Section 2: Parent / Guardian Information -->
            <div class="form-section" id="section-2">
                <h5 class="mb-3 text-success"> Guardian Info/ অভিভাবকের তথ্য</h5>
                <div class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label required-field">Guardian Name / পিতা বা মাতার নাম
                        </label>
                        <input type="text" class="form-control" name="Guardian_Name" required>
                        <div class="invalid-feedback">Please enter guardian name.</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required-field">Relation with Student / ছাত্রের সঙ্গে
                            সম্পর্ক</label>
                        <select class="form-select" name="Relation_with_Student" required>
                            <option value="" selected>Select Relation / সম্পর্ক নির্বাচন করুন</option>
                            <option value='Father'>Father / পিতা</option>
                            <option value='Mother'>Mother / মাতা</option>
                            <option value='Guardian'>Guardian / অভিভাবক</option>
                            <option value='Other'>Other / অন্যান্য</option>
                        </select>
                        <div class="invalid-feedback">Please select relation with student.</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required-field">Occupation / পেশা</label>
                        <select class="form-select" name="occupation" required>
                            <option value="" selected>Select Occupation / পেশা নির্বাচন করুন</option>
                            <option value="Student">Student / ছাত্র</option>
                            <option value="Teacher">Teacher / শিক্ষক</option>
                            <option value="Farmer">Farmer / কৃষক</option>
                            <option value="Businessman">Businessman / ব্যবসায়ী</option>
                            <option value="Engineer">Engineer / প্রকৌশলী</option>
                            <option value="Doctor">Doctor / ডাক্তার</option>
                            <option value="Service Holder">Service Holder / চাকরিজীবী</option>
                            <option value="Driver">Driver / চালক</option>
                            <option value="Housewife">Housewife / গৃহিণী</option>
                            <option value="Day Labourer">Day Labourer / দিনমজুর</option>
                            <option value="Other">Other / অন্যান্য</option>
                        </select>
                        <div class="invalid-feedback">Please select occupation.</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required-field">Mobile No. / মোবাইল নম্বর</label>
                        <input type="tel" class="form-control" name="Mobile_No" pattern="[0-9]{10}" required>
                        <div class="invalid-feedback">Please enter a valid 10-digit mobile number.</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required-field">WhatsApp No. / হোয়াটসঅ্যাপ
