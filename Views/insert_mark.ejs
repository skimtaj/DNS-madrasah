<!DOCTYPE html>
<html lang="en">

<%-include('admin_header')%>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Professional Exam Form</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                background: linear-gradient(to right, #eef2f3, #dfe9f3);
                font-family: 'Segoe UI', sans-serif;
            }

            .form-card {
                background: #fff;
                border-radius: 14px;
                padding: 30px;
                box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
                margin-top: 50px;
                max-width: 650px;
                margin-left: auto;
                margin-right: auto;
                margin-bottom: 50px;
            }

            .form-title {
                text-align: center;
                font-weight: 700;
                color: #2C3E50;
                margin-bottom: 30px;
            }

            .section-title {
                font-size: 1.15rem;
                font-weight: 600;
                border-left: 5px solid #00A65A;
                padding-left: 12px;
                margin-bottom: 20px;
                color: #00A65A;
            }

            .form-label {
                font-weight: 500;
                color: #2C3E50;
            }

            .form-control,
            .form-select {
                border-radius: 8px;
                border: 1px solid #ccc;
            }

            .btn-custom {
                background: #00A65A;
                color: #fff;
                padding: 10px 30px;
                border-radius: 8px;
                font-size: 1rem;
                font-weight: 500;
                border: none;
                transition: all 0.3s ease;
            }

            .btn-custom:hover {
                background: #008f4c;
            }

            .inline-section {
                background: #fff;
                padding: 15px;
                border-radius: 10px;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
            }
        </style>
    </head>

    <body>

        <div class="form-card">
            <h2 class="form-title">Exam Entry Form</h2>

            <form method="post">


                <!-- Section 1 -->
                <div class="section-title">Course Details</div>
                <div class="row g-3 mb-4 inline-section">
                    <!-- Roll No -->

                    <!-- Course -->
                    <div class="col-md-6">
                        <label class="form-label">Course</label>
                        <select class="form-select" required id="course">
                            <option value="">Select</option>
                            <% allCourse.forEach((c)=>{ %>
                                <option value="<%=c.course_name%>">
                                    <%=c.course_name%>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <!-- Department -->
                    <div class="col-md-6">
                        <label class="form-label">Department</label>
                        <select class="form-select" required id="department">
                            <option value="">Select</option>

                            <% allSream.forEach((s)=>{%>

                                <option value="<%=s.Stream_Name%>">
                                    <%=s.Stream_Name%>
                                </option>

                                <% })%>

                        </select>
                    </div>
                    <!-- Semester -->
                    <div class="col-md-6">
                        <label class="form-label">Semester</label>
                        <select class="form-select" required id="semester">
                            <option value="">Select</option>

                            <% allSem.forEach((s)=>{ %>

                                <option value=" <%=s.Semester_Name%>">
                                    <%=s.Semester_Name%>
                                </option>

                                <% })%>

                        </select>
                    </div>


                    <div class="col-md-6">
                        <label class="form-label">Rool No</label>
                        <select class="form-select" required id="roll" name="roll_no">
                            <option value="">Select </option>

                        </select>
                    </div>




                </div>


                <!-- Section 2 -->
                <div class="section-title" id="examDetails">Exam Details</div>

                <div class="text-center mt-4">
                    <button class="btn-custom" type="submit">Submit</button>
                </div>
            </form>
        </div>

        <script>


            const allSubject = <%- JSON.stringify(allSubject) %>;
            const allStudents = <%- JSON.stringify(allStudents) %>;

            const semester = document.getElementById('semester');
            const department = document.getElementById('department');
            const course = document.getElementById('course');
            const examDetails = document.getElementById('examDetails');
            const studentRoll = document.getElementById('roll')

            course.addEventListener('change', () => {
                let selectedCourse = course.value;
                department.addEventListener('change', () => {
                    let selecetedDepartment = department.value;
                    semester.addEventListener('change', () => {
                        let selectedSem = semester.value;
                        if (selectedCourse && selecetedDepartment && selectedSem) {
                            examDetails.innerHTML = `<div class="section-title">Exam Details</div>`; // reset before adding
                            allSubject.forEach((s, i) => {
                                if (
                                    selectedCourse.trim() === s.course_Name.trim() &&
                                    selecetedDepartment.trim() === s.department.trim()
                                ) {
                                    examDetails.innerHTML += `
                                    <div class="mb-3">

                                        <input type="text" class="form-control" placeholder="Enter Subject number" required name="marksheet[${i}][subject]"  value='${s.sub_name}' >
                                        <input type="number" class="form-control" placeholder="Enter Subject number" required name="marksheet[${i}][mark]">

                                    </div>`;
                                }


                            })
                        }
                    });
                });
            });


            course.addEventListener('change', (e) => {
                let courseSelected = e.target.value;

                department.addEventListener('change', (e) => {

                    let departmentSelected = e.target.value;

                    semester.addEventListener('change', (e) => {

                        let semSelected = e.target.value;


                        if (courseSelected && departmentSelected && semSelected) {


                            allStudents.forEach((s) => {

                                if (courseSelected.trim().toLowerCase() === String(s.course).trim().toLowerCase() && departmentSelected.trim().toLowerCase() === String(s.stream).trim().toLowerCase() && semSelected.trim().toLowerCase() === String(s.sem).trim().toLowerCase()
                                ) {


                                    studentRoll.innerHTML = '<option value="">Select </option>'

                                    let option = document.createElement('option');
                                    option.value = s.roll_no;
                                    option.textContent = s.roll_no;
                                    studentRoll.appendChild(option)
                                }




                            })
                        }
                    })

                })

            })



        </script>

    </body>

</html>